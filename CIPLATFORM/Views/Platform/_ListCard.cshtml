@using CIPLATFORM.Entities.ViewModels
@model CardsViewModel

<link rel="stylesheet" href="~/css/HomeList.css">
<div id="grid-view">

    <div class="row">
        <div class="col-md-9 col-sm-12"> <h3> Explore <b>@ViewBag.totalMission missions</b> </h3></div>
        <div class="col-md-3 col-sm-12 d-flex justy">
             <button class="h-item border-0 d-flex  bg-light align-items-center justify-content-between " type="button"
                    data-bs-toggle="dropdown">
                <span class="profile-name d-flex">Sort By</span>
                <img src="~/images/drop-down.png" alt="Profile-dropdown" />
            </button>
            <ul class="dropdown-menu ">
                <li><a class="dropdown-item" >Newest</a></li>
                <li><a class="dropdown-item" >Oldest</a></li>
                <li><a class="dropdown-item" >Lowest Available Seats</a></li>
                <li><a class="dropdown-item" >Highest Available Seats</a></li>
                <li><a class="dropdown-item" >My Favourite</a></li>
                <li><a class="dropdown-item" >Registration Deadline</a></li>
            </ul>
            <div class="">
                <a onclick="opengrid()">
                    <i class="bi bi-grid"></i>
                </a>
            </div>
            <div class="">
                <a onclick="openlist()">
                    <i class="bi bi-list"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.missions)
        {
            <div class="card mb-3 p-0" style="width:100%;">
                <div class="row g-0">
                    <div class="col-md-4 col-12">
                        <div class="card">
                            <img src=~/images/@(item.MissionMedia.FirstOrDefault()?.MediaPath) class="card-img-top img-responsive center-block img99" alt="...">
                            <div class="position-relative">
                                <div class="position-absolute top-100 start-50 translate-middle round p-2 title"
                                 style="background-color: white;">
                                    @item.Theme.Title
                                </div>
                            </div>
                            <div class="card-img-overlay">
                                <p class="text-end text">
                                    <button class="btn btn-box" style="background-color: black ; opacity: 50%;">
                                        <img src="~/images/pin.png" class="mx-2 cancle-img" alt="">
                                        <span style="color: white ; ">@item.City.Name</span>
                                    </button>



                                </p>
                                <div class="pt-1 text-end">
                                    <button class="btn btn-box rounded-5"
                                        style="background-color: black ;opacity: 50%;">
                                        <img src="~/images/heart.png" class=" img-fluid cancle-img" alt="">
                                    </button>
                                </div>
                                <div class="text-end">

                                    <button class="btn btn-box rounded-5"
                                        style="background-color: black ; opacity: 50%;;">
                                        <img src="~/images//user.png" class=" img-fluid cancle-img" alt="">
                                    </button>
                                </div>
                            </div>


                        </div>


                    </div>
                    <div class="col-md-8 col-12">
                        <div class="card-body">
                            <div class="row">
                                <h3 class="card-title">@item.Title</h3>
                                <p class="card-text">
                                    @item.ShortDescription
                                </p>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-7">
                                    @item.OrganizationName
                                    @if (true)
                                    {
                                        @for (int i = 1; i <= @item.MissionRatings.FirstOrDefault()?.Rating; i++)
                                        {
                                            <i class="bi bi-star-fill" style="color: #F8D441;"></i>
                                        }
                                        @for (int i = 1; i <= 5 - @item.MissionRatings.FirstOrDefault()?.Rating; i++)
                                        {
                                            <i class="bi bi-star" style="color: #F8D441;"></i>
                                        }
                                    }
                                </div>
                                <div class="col-sm-5">
                                    <div class="wrapper  d-flex justify-content-center">
                                        <hr class="divider">
                                        <div class=" d-flex justify-content-center b2 ">

                                            <div class="d-flex justify-content-center .left .right ">
                                                @{
                                                    if (item.StartDate <= DateTime.Now && DateTime.Now <= item.EndDate)
                                                    {
                                                        <span>Ongoing Opportunity</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@item.StartDate.ToString().Substring(0,10)  until @item.EndDate.ToString().Substring(0,10) </span>
                                                    }
                                                }


                                            </div>

                                        </div>
                                        <hr class="divider">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-sm-7">
                                    <div class="apply2">
                                        <button type="button" class="btn btn-outline apply">
                                            Apply
                                            <i class=" ms-2 bi bi-arrow-right-short"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="bi bi-person-check " style="font-size: 25px;"></i>
                                            <span> 10 <br> seats left</span>
                                        </div>
                                        <div class="col-6 d-flex justify-content-end">
                                            <i class="bi bi-clock" style="font-size: 25px;"></i>
                                            <span> @item.EndDate.ToString().Substring(0,10)  <br> Deadline</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</div>
