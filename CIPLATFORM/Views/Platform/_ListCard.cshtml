            for (int i = 1; i <= totalpages; i++)
            {
                @if (i == ViewBag.pg_no)
                {
                    <li class="page-item ">
                        <a class="page-link" onclick="temp(@i)">@i </a>

                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" onclick="temp(@i)">@i</a>
                    </li>
                }


            }
        }



