                                        <i class="bi bi-star" style="color: #F8D441;"></i>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="wrapper d-flex justify-content-center">
                            <hr class="divider">
                            <div class=" d-flex justify-content-center b2 ">

                                <div class="d-flex justify-content-center .left .right ">
                                    @* @item.StartDate.ToShortDateString() until @item.EndDate.ToShortDateString()*@
                                    @{

                                        if (Model.relatedmissions[i].StartDate <= DateTime.Now && DateTime.Now <= Model.relatedmissions[i].EndDate)
                                        {
                                            <span>Ongoing Opportunity</span>
                                        }
                                        else
                                        {
                                            <span>@Model.relatedmissions[i].StartDate.ToString().Substring(0,10) until @Model.relatedmissions[i].EndDate.ToString().Substring(0,10) </span>
                                        }
                                    }
                                </div>

                            </div>
                            <hr class="divider">
                        </div>
                        <div class="container">
                            <div class="row mt-2">
                                <div class="col-6 ">

                                    <i class="bi bi-person-check " style="font-size: 28px;"></i>
                                    10 <br>
                                    seats left

                                </div>
                                <div class="col-6 ">
                                    <i class="bi bi-clock" style="font-size: 25px;"></i>
                                    @Model.relatedmissions[i].EndDate.ToString().Substring(0,10) <br> Deadline
                                </div>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-center apply2">
                            <button type="button" class="btn btn-outline apply">
                                <a asp-controller="Platform" asp-action="MissionListing" asp-route-mid="@Model.relatedmissions[i].MissionId" style="text-decoration:none;color:black"> Apply <i class=" ms-2 bi bi-arrow-right-short"></i></a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>

</div>
