@model MissionListingViewModel
<link rel="stylesheet" href="~/css/MissionListing.css">




<hr class="d-none d-md-block">

<!-- ..............body..................... -->


<div class="container">

    <!-- ..............card..................... -->
    <div class="card mb-3 p-0">
        <div class="row g-0">
            <div class="col-lg-6 ">

                <div class="container p-0 pb-5 h-100" style="max-width: 100%; height: 100%;">

                    @for (int i = 1; i <= Model.missionmedias.Count; i++)
                    {
                        <div class="mySlides">

                            <img src=~/images/@(Model.missionmedias[i-1].MediaPath) style="width:100%; ">
                        </div>
                    }

                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>

                    <div class="row g-1">

                        @for (int i = 1; i <= Model.missionmedias.Count; i++)
                        {
                            <div class="col">
                                <img class="demo cursor" src=~/images/@(Model.missionmedias[i-1].MediaPath) onclick="currentSlide(@i)" style="width:100%;">
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card-body">
                    <h3 class="card-title">@Model.missions.Title</h3>

                    <p class="card-text mt-4">
                        @Model.missions.ShortDescription
                    </p>

                    <div class="wrapper  d-flex justify-content-center mt-4">
                        <hr class="divider">
                        <div class=" d-flex justify-content-center b2 ">
                            <div class="d-flex justify-content-center .left .right ">
                                @if (Model.missions.StartDate <= DateTime.Now && DateTime.Now <= Model.missions.EndDate)
                                {
                                    <span>Ongoing Opportunity</span>

                                }
                                else
                                {
                                    <span>@Model.missions.StartDate.ToString().Substring(0,10) until @Model.missions.EndDate.ToString().Substring(0,10) </span>
                                }
                            </div>
                        </div>
                        <hr class="divider">
                    </div>

                    <div class="row ">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 mt-3 ">
                            <img src="~/images/Seats-left.png">
                            <span class="ten">10 </span>
                            <p class="mx-4" style="color: #757575;">Seats left</p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 mt-3">

                            <img src="~/images/mission.png" class="mission me-2" style="color:#F88634;
                                            height:20px;
                                            width:20px;">
                            <input type="range" class="mt-1 i1" id="slider" name="slider" min="0" max="100"
                                   value="0">

                            <div class="row">
                                <div class="col-12">
                                    <p class=" d-flex justify-content-start ms-5" style="color:#757575;">
                                        8000
                                        achieved
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-12 col-md-6 col-sm-12 mt-2">
                            <button type="submit" class="btn btn-outline w-100 rounded-pill" style="background: #F8863400 0% 0% no-repeat padding-box;
                             border: 2px solid #020201;
                               border-radius: 24px;
                               opacity: 1; color:#020202" onclick="AddMissionToFavourite(@Model.missions.MissionId)">
                                <i class="bi bi-heart-fill" id="addToFav"></i> Add To Favourite
                            </button>
                        </div>
                        <div class="col-12 col-md-6 col-sm-12 mt-2">

                            <button type="submit" class="btn btn-outline w-100  rounded-pill" style="background: #F8863400 0% 0% no-repeat padding-box;
                                border: 2px solid #020201;
                              border-radius: 24px;
                                opacity: 1; color:#020202">
                                <i class="bi bi-square-fill  "><span> Recommend to a Co-Worker</span></i>
                            </button>
                        </div>
                    </div>
                    <div class="wrapper  d-flex justify-content-center mt-3">
                        <hr class="divider">
                        <div class=" d-flex justify-content-center  ">
                            <div class="d-flex justify-content-center .left .right ">
                                <i class="bi bi-star str"></i>
                                <i class="bi bi-star str"></i>
                                <i class="bi bi-star str"></i>
                                <i class="bi bi-star str"></i>
                                <i class="bi bi-star str"></i>
                            </div>
                        </div>
                        <hr class="divider">
                    </div>
                    <div class="container-fluid row row-cols-2 row-cols-sm-4 g-2 mt-3 ">
                        <div class="col ">
                            <div class="h-100 border">

                                <i class="bi bi-geo-alt"></i>
                                <p class=" small">@Model.missions.City.Name</p>

                            </div>
                        </div>
                        <div class="col ">
                            <div class=" h-100  border">

                                <i class="bi bi-globe"></i>
                                <p class=" small">@Model.missions.Theme.Title</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class=" h-100 border">

                                <i class="bi bi-calendar3">@Model.missions.StartDate.ToString().Substring(0,10) <br> until @Model.missions.EndDate.ToString().Substring(0,10) </i>
                                <p class=" small"></p>
                            </div>
                        </div>
                        <div class="col">
                            <div class=" h-100  border">
                                <i class="bi bi-people">
                                </i>
                                <p class=" small">@Model.missions.OrganizationName</p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center" id="okayyy" style="color:green;font-size:25px;"></div>
                    <div class="d-flex justify-content-center" id="fail" style="color:red;font-size:25px;"></div>
                    <div class="row mt-3">

                        <div class="apply2 d-flex justify-content-center">
                            <button type="button" class="btn btn-outline apply" id="applyMission" onclick="applyMission(@Model.missions.MissionId)">
                                Apply Now
                                <i class=" ms-2 bi bi-arrow-right-short"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

<!--tabs...........-->
    <div class="row mt-3">
        <div class="col-lg-8">

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-1" type="button"
                            role="tab" aria-controls="home" aria-selected="true">
                        Mission
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-2" type="button" role="tab"
                            aria-controls="profile" aria-selected="false">
                        Organisation
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-3" type="button" role="tab"
                            aria-controls="contact" aria-selected="false">
                        Comments
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
                    <h3>Introduction</h3>
                    <p>
                        @Model.missions.Description
                    </p>
                    <h3>Challenge</h3>
                    <p>
                        @Model.missions.Description
                    </p>

                    <h3>Document</h3>
                    <div>
                        @foreach (var documents in Model.missiondocuments)
                        {
                            <a href=~/images/@documents.DocumentPath target="_blank">
                                <button type="submit " class="btn btn-outline-dark rounded-pill ">
                                    @if (@documents.DocumentType == "PDF")
                                    {
                                        <i class="bi bi-filetype-pdf">@documents.DocumentName</i>
                                    }
                                    else if (@documents.DocumentType == "Image")
                                    {
                                        <i class="bi bi-file-image">@documents.DocumentName</i>

                                    }

                                </button>
                            </a>

                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="tab-2" role="tabpanel">
                    @Model.missions.OrganizationDetail
                </div>
                <div class="tab-pane fade" id="tab-3" role="tabpanel">
                    <div class="form-group" id="comment">
                        @ViewBag.ComntAdded
                        <input type="hidden" value="missions.MissionId" id="mid" />
                        <textarea asp-for="commentDescription" class="form-control" id="comment_text" rows="3"
                                  placeholder="Enter your comments"></textarea>
                    </div>
                    <div class=" mt-3 mb-3">
                        <button type="button" class="btn btn-outline-warning rounded-pill" onclick="comment(@Model.missions.MissionId)">
                            Post Comment
                        </button>
                    </div>
                    <div class="row ex1">
                        <div class="col-10 col-lg-8">
                            @foreach (var item in Model.comments)
                            {
                                <div class="container">
                                    <div class="row mt-4" style="background-color: white;">
                                        <div class="col-md-3 col-12 d-flex justify-content-center align-items-center">
                                            <img src="~/images/@item.User.Avatar"
                                             style="border-radius: 50%; height: 4.5em;" alt="">
                                        </div>
                                        <div class="col-md-9 col-12">
                                            <h5 class="my-1">@item.User.FirstName   @item.User.LastName</h5>
                                            <p class="my-1">@item.CreatedAt.ToString("dddd, MMMM dd, yyyy, h.mm tt")</p>
                                            <p class="my-1">@item.CommentDescription</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container col-lg-4  mt-3">
            <div class="border">
                <div class="container">
                    <div class="row">
                        <div class="col-10  pt-3">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-1"
                                            type="button" role="tab" aria-controls="home"
                                            aria-selected="true">
                                        Information
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col-3">Skills</div>
                        <div class="col-9">
                            @foreach (var item in Model.missionskills)
                            {
                                @item.Skill.SkillName <br />
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3">Days</div>
                        <div class="col-9">@Model.missions.Avaibility</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3 pe-0 mb-3">Rating</div>
                        <div class="col-9">
                            @for (int i = 1; i <= (int)@Model.missions.MissionRatings.Average(x => x.Rating); i++)
                            {
                                <i class="bi bi-star-fill" style="color: #F8D441;"></i>
                            }
                            @for (int i = 1; i <= 5 - (int)@Model.missions.MissionRatings.Average(x => x.Rating); i++)
                            {
                                <i class="bi bi-star" style="color: #F8D441;"></i>
                            }
                            (by @Model.missions.MissionRatings.Count volunteers)
                        </div>
                    </div>
                </div>
            </div>
            <div class="border mt-3">
                <div class="container">
                    <div class="row">
                        <div class="col-12  pt-3">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link1 active" data-bs-toggle="tab" data-bs-target="#tab-1"
                                            type="button" role="tab" aria-controls="home" aria-selected="true">
                                        Recent
                                        Volunteers
                                    </button>
                                </li>
                            </ul>
                            <div class="row mt-3">
                                @foreach (var data in Model.missionapplications)
                                {
                                    <div class="col-4">
                                        <div class="row">
                                            <img src=~/images/@data.User.Avatar class="img50" alt="">
                                        </div>
                                        <div class="row">
                                            <span class="d-flex justify-content-center">   @data.User.FirstName </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
















