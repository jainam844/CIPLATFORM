@using CIPLATFORM.Entities.ViewModels
@model AdminViewModel




<div id="cmspage">

    <table class="table mt-3">
        <tbody>
            <tr style="background-color: #F8F9FC;">
                <th scope="col">Theme Title</th>
                <th scope="col">Status</th>
              
                <th scope="col" style="text-align: center;">Actions</th>
            </tr>
            @foreach (var obj in Model.missionthemes)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td><span style="color: #3CDD5F; ">@obj.Status</span></td>
                    

                    <td style="text-align: center;">
                        <button type="button" class="btn p-0" onclick="editform('nav-theme');">
                            <i class="bi bi-pencil-square" style="color: coral;"></i>
                        </button>
                        <button type="button" class="btn p-0">
                            <i class=" bi bi-trash ms-3"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

        <nav aria-label="Page navigation example mt-5">
        <ul class="pagination justify-content-end me-5" onchange="searchuser(1,'missiontheme')">
            @* <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous" onclick="Previous(2)">
                <span aria-hidden="true">&laquo;</span>
                </a>
                </li>*@
            @{
                double totalpages = ViewBag.Totalpages4;



                for (int i = 1; i <= totalpages; i++)
                {
                    @if (i == ViewBag.pg_no)
                    {
                        <li class="page-item  ">
                            <a class="page-link  " onclick="searchuser(@i,'missiontheme')">@i </a>

                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" onclick="searchuser(@i,'missiontheme')">@i</a>
                        </li>
                    }


                }
            }

        </ul>
    </nav>

  
</div>



<div class="border mt-3" id="add" style="display: none;">
    <h3 class="p-3 m-0" style="background-color: #F8F9FC;"> Add mission theme</h3>
    <hr class="m-0">
    <form action="" class="px-3">
        <label for="select mission" class="mt-3"> Title </label>
        <input type="text" class="form-control" id="formGroupExampleInput">
        <label for="theme1" class="mt-3"> Description</label>
        <textarea id="theme1" cols="172" rows="10"     maxlength="40000"></textarea>
        <script>
            var abc = document.getElementById("theme1");
            CKEDITOR.replace(abc);
        </script>
        <label for="select mission" class="mt-3"> Slug </label>
        <input type="text" class="form-control" id="formGroupExampleInput">

        <label class="mb-1 mt-3">Mission</label>
        <select type="text" class="form-select form-control">
            <option value="1">Select your mission</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <div class="row my-3">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="button" class="cancell rounded-pill btn btn-outline-dark"
                        onclick="addpage('nav-theme');">
                    Cancel
                </button>
                <button type="submit" class="threebt rounded-pill btn btn-outline-warning"
                        value="2" name="command">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>



