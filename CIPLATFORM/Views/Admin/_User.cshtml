
@using CIPLATFORM.Entities.ViewModels
@model AdminViewModel
<div id="cmspage">

    <h4 class="pt-3 pb-2">User</h4>
    <div class="row mt-3 g-0">
        <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
            <div class="form-group has-search">
                <span class="form-control-feedback"> <i class="bi bi-search"></i> </span>
                <input type="text" class="form-control " placeholder="Search">
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-8 col-xl-9 text-sm-end mt-3 mt-sm-0">
            <button type="button" onclick="addform('nav-user');"
                    class="btn btn-outline-warning rounded-pill">
                <i class="bi bi-plus"></i>
                Add
            </button>
        </div>
    </div>
    <table class="table mt-3">
        <tbody>
       
                

            <tr style="background-color: #F8F9FC;">
                <th scope="col">FirstName </th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">EmployeeId</th>
                <th scope="col">Department</th>
                <th scope="col">Status</th>
                <th scope="col" style="text-align: center;">Action</th>
            </tr>
                 @foreach (var obj in Model.users)
            {
            <tr>
                <td>@obj.FirstName</td>
                <td>@obj.LastName</td>
                <td>@obj.Email</td>
                <td>@obj.EmployeeId</td>
                <td>@obj.Department</td>
               @if(obj.Status == 1){                    <td style=" width: 33px; color: #3CDD5F; ">                        Active                    </td>                    }                    else{                    <td style=" width: 33px; color: #FF4545; ">                        Inactive                    </td>                    }


                <td style=" text-align:center;">
                    <button type="button" class="btn p-0"
                            onclick="editform('nav-user');">
                        <i class="bi bi-pencil-square" style="color: coral;"></i>
                    </button>

                    <button type="button" class="btn p-0">
                        <i class="bi bi-trash ms-3"></i>
                    </button>
                </td>
                </tr>
                }

        </tbody>
    </table>
</div>


<div class="border" id="add" style="display: none;">
    <h3 class="p-3 m-0" style="background-color: #F8F9FC;"> Add User</h3>
    <hr class="m-0">
    <form action="" class="px-3">
        <label for="select mission" class="mt-3"> Title </label>
        <input type="text" class="form-control" id="formGroupExampleInput">
        <label for="user1" class="mt-3"> Description</label>
        <textarea id="user1" cols="172" rows="10" maxlength="40000"></textarea>
        <script>
            var abc = document.getElementById("user1");
            CKEDITOR.replace(abc);
        </script>
        <label for="select mission" class="mt-3"> Slug </label>
        <input type="text" class="form-control" id="formGroupExampleInput">

        <label class="mb-1 mt-3">Mission</label>
        <select type="text" class="form-select form-control">
            <option value="1">Select your mission</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <div class="row my-3">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="button" class="cancell rounded-pill btn btn-outline-dark"
                        onclick="addpage('nav-user');">
                    Cancel
                </button>
                <button type="submit" class="threebt rounded-pill btn btn-outline-warning"
                        value="2" name="command">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>
<div class="border" id="edit" style="display: none;">
    <h3 class="p-3 m-0" style="background-color: #F8F9FC;"> Edit User </h3>
    <hr class="m-0">
    <form action="" class="px-3">
        <label for="select mission" class="mt-3"> Title </label>
        <input type="text" class="form-control" id="formGroupExampleInput">
        <label for="user2" class="mt-3"> Description</label>
        <textarea id="user2" cols="172" rows="10" maxlength="40000"></textarea>
        <script>
            var abc = document.getElementById("user2");
            CKEDITOR.replace(abc);
        </script>
        <label for="select mission" class="mt-3"> Slug </label>
        <input type="text" class="form-control" id="formGroupExampleInput">

        <label class="mb-1 mt-3">Mission</label>
        <select type="text" class="form-select form-control">
            <option value="1">Select your mission</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <div class="row my-3">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="button" class="cancell rounded-pill btn btn-outline-dark"
                        onclick="editpage('nav-user');">
                    Cancel
                </button>
                <button type="submit" class="threebt rounded-pill btn btn-outline-warning"
                        value="2" name="command">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>