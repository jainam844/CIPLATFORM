              <form class="formmain" asp-action="login" >
                
                  <div class="form-group">
                      <label for="exampleInputEmail1"> Email address </label>
                      <input type="email" required="required" asp-for="Email" class="form-control form-control-sm"  placeholder="evan.donohue@gmail.com" id="exampleInputEmail1" aria-label="Large" aria-describedby="emailHelp">
                  </div>
                  <br>
          
                  <div class="form-group">
                      <label for="exampleInputPassword1">Password </label>
                      <input type="password" required="required" asp-for="Password" class="form-control form-control-sm"  id="exampleInputPassword1">
                  </div>
                  <br>
                  <button type="submit" asp-action="login" class="btn btn-outline btn-block" style="background: #F8863400 0% 0% no-repeat padding-box;
                  border: 2px solid #F88634;
                  border-radius: 24px;
                  opacity: 1; color:#F88634"> Login </button>
                    <a asp-area=""  asp-controller="User" asp-action="forgot"  class="text-reset text-decoration-none">

                  @*<a asp-controller="Home" asp-action="Home" href="~/Home/forgot" class="text-reset text-decoration-none">*@
                      <p class="text-center lh-lg m-3"> Lost your password? </p>
                  </a>
                  <div class="sign-up">
                      <p class="text-center mb-0">
                          Don't have an account? <a asp-area=""  asp-controller="User" asp-action="register" class="text-decoration-none"> Create an account </a></p>
                  </div>
                      <span class="text-danger">@TempData["utsav"]</span>

                  <div class="text-center  pt-2 align-items-end privacy">
                      <a href=""> Privacy Policy </a>
                  </div>
                </form>
            
